# Frontend environment variables
# Copy this file to `.env.local` and adjust values for your backend

# Base URL of your backend API (no trailing slash)
# Leave empty when using dev proxy
# VITE_API_BASE_URL=http://localhost:3000

# Login path on the backend
# VITE_LOGIN_PATH=/api/auth/login

# Field names used by backend for credentials
# Use 'username' if your backend expects username instead of email
VITE_LOGIN_EMAIL_FIELD=email
VITE_LOGIN_PASSWORD_FIELD=password

# Body type: 'json' or 'form' (application/x-www-form-urlencoded)
VITE_LOGIN_BODY_TYPE=json

# Send cookies with requests (if your backend uses cookie-based sessions)
VITE_HTTP_WITH_CREDENTIALS=false

# Dev proxy target (used by Vite to forward /api and /auth)
VITE_API_BASE_URL=http://13.51.205.9:8080
VITE_LOGIN_PATH=/api/auth/login
